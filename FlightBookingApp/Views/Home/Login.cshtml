@model FlightBookingApp.Models.customer_book

@{
    /**/

    ViewBag.Title = "Login";
}
<h2><b>Login Form</b></h2>
<style type="text/css">
    .bs-example {
        height: 220px;
    }

    .imgcontainer {
        margin: 24px 0 12px 0;
        position: relative;
        padding-left:380px;
    }

    img.avatar {
        width: 40%;
        border-radius: 50%;
    }

    .container {
        padding: 16px;
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }

    .centerlook {
        padding-left: 300px;
        font-weight: bold;
        width: 1000px;
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }

    .error {
        padding-left: 400px;
        font-weight: bold;
        width: 1000px;
        color: red;
    }

    .loginbtn {
        padding-left: 500px;
    }
    .checkbtn {
        padding-left: 470px;
    }

    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }

</style>

@using (Html.BeginForm("Login","Home",FormMethod.Post))

{

    @Html.AntiForgeryToken()


<body style="display:table;height: 100%;width: 100%;">
    <form style="display:table;height: 100%;width: 100%;">
        <div class="form-horizontal" padding:16px>
            <div class="form-group centerlook">
                <label>@Html.DisplayFor(model => model.LoginErrorMessage)</label>
            </div>

            <div class="imgcontainer">
                <img src="~/images/login.JPG">
            </div>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group centerlook">

                <b>@Html.LabelFor(model => model.customer_emailaddress, htmlAttributes: new { @class = "control-label col-md-2" })</b>

                <div class="col-md-10">

                    @Html.EditorFor(model => model.customer_emailaddress, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.customer_emailaddress, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group centerlook">

                <b>@Html.LabelFor(model => model.customer_password, htmlAttributes: new { @class = "control-label col-md-2" })</b>

                <div class="col-md-10">

                    @Html.EditorFor(model => model.customer_password, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.customer_password, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="loginbtn">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="checkbtn">
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me

                </label>

            </div>
            <span class="psw" align="center">Forgot <a href="#">password?</a></span>
        </div>
    </form>
    

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
    }
